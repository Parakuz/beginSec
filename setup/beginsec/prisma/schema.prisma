datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String // เก็บรหัสผ่านในรูปแบบ MD5 (ช่องโหว่ Cryptographic Failure)
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  comments    Comment[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String   // ไม่มีการ sanitize ทำให้เกิด XSS ได้
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
}
